{
    "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 1,
        "patch": 2
    },
    "configurePresets": [
        {
            "name": "base",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/.build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_UNITY_BUILD": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "CMAKE_UNITY_BUILD_BATCH_SIZE": {
                    "type": "STRING",
                    "value": "32"
                },
                "CMAKE_CONFIGURATION_TYPES": {
                    "type": "STRING",
                    "value": "Debug;Release;RelWithDebInfo;MinSizeRel;"
                },
                "CMAKE_C_COMPILER": {
                    "type": "STRING",
                    "value": "clang"
                },
                "CMAKE_CXX_COMPILER": {
                    "type": "STRING",
                    "value": "clang++"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base-Debug",
            "configuration": "Debug"
        }
    ],
    "testPresets": [],
    "packagePresets": [],
    "workflowPresets": []
}